<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MotoLand</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body>

    <!-- Header -->
    <header class="header">
        <h1 class="motoland"><a href="">MotoLand</a></h1>
        <div class="auth-buttons">
            <a href="Account/Login">Zaloguj się</a>
            <a href="Account/Register">Zarejestruj się</a>
        </div>
    </header>

    <!-- Main Section -->
    <main class="main">
        <div class="container">
            <h1>Znajdź swoje wymarzone auto</h1>

            <!-- Filter Section -->
            <section class="filters">
                <h2>Filtry wyszukiwania</h2>
                <form id="car-search-form">
                    <div class="filter-group">
                        <div>
                            <label for="car-brand">Marka:</label>
                            <input type="text" id="car-brand" name="car_brand" placeholder="Marka">
                        </div>
                        <div>
                            <label for="car-model">Model:</label>
                            <input type="text" id="car-model" name="car_model" placeholder="Model">
                        </div>
                        <div>
                            <label for="car-year">Rok:</label>
                            <input type="number" id="car-year" name="car_year" placeholder="Rok">
                        </div>
                        <div>
                            <label for="car-price">Cena:</label>
                            <input type="number" id="car-price" name="car_price" placeholder="Cena">
                        </div>
                        <div>
                            <label for="car-mileage">Przebieg:</label>
                            <input type="number" id="car-mileage" name="car_mileage" placeholder="Przebieg">
                        </div>
                        <div>
                            <label for="engine-capacity">Poj. Silnika:</label>
                            <input type="number" id="engine-capacity" name="engine_capacity" placeholder="Poj. Silnika">
                        </div>
                    </div>
                    <div>
                        <button type="submit">Szukaj</button>
                    </div>
                </form>
            </section>

            <h2>Lista ogłoszeń</h2>

            <!-- Button to Add Advertisement -->
            <div>
                <a href="Account/Login" class="add-ad-button">Dodaj ogłoszenie</a>
            </div>

            <div class="car-ads">
                @if (Model != null)
                {
                    foreach (var ad in Model)
                    {
                        <div class="car-ad">
                            <h3>@ad.Make @ad.Model (@ad.Year)</h3>
                            <p><strong>Cena:</strong> @ad.Price.ToString("C")</p>
                            <p><strong>Opis:</strong> @ad.Description</p>
                            <div class="ad-actions">
                                <a href="@Url.Action("Edit", "CarAds", new { id = ad.Id })">Edytuj</a>
                                <a href="@Url.Action("Delete", "CarAds", new { id = ad.Id })">Usuń</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Brak dostępnych ogłoszeń.</p>
                }
            </div>

            <!-- Car List -->
            <section class="car-list">
                <a href="Home/car_details" class="car-card">
                    <div class="car-image">
                        <img src="https://cdn.prod.website-files.com/645ba5c617e2c868445e6e83/65aaf69ac5992b7b3e1e390e_blog-92.webp" alt="BMW X5">
                    </div>
                    <div class="car-details">
                        <h3>BMW X5</h3>
                        <p>Rok: 2022</p>
                        <p class="price">Cena: 450 000 zł</p>
                    </div>
                </a>
                <a href="car-details.html" class="car-card">
                    <div class="car-image">
                        <img src="https://motofilm.pl/wp-content/uploads/2021/11/2022-Audi-A8-4.jpg" alt="Audi A8">
                    </div>
                    <div class="car-details">
                        <h3>Audi A8</h3>
                        <p>Rok: 2021</p>
                        <p class="price">Cena: 350 000 zł</p>
                    </div>
                </a>
                <a href="car-details.html" class="car-card">
                    <div class="car-image">
                        <img src="https://www.mercedes-benz.pl/content/poland/pl/passengercars/models/saloon/s-class/overview/_jcr_content/root/responsivegrid/tabs/tabitem/hotspot_module/hotspot_simple_image.component.damq1.3327517345242.jpg/mercedes-benz-s-class-wv223-exterior-hotspot-3302x1858-09-2022.jpg" alt="Mercedes-Benz S-Class">
                    </div>
                    <div class="car-details">
                        <h3>Mercedes-Benz S-Class</h3>
                        <p>Rok: 2020</p>
                        <p class="price">Cena: 400 000 zł</p>
                    </div>
                </a>
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        &copy; 2024 MotoLand. Wszelkie prawa zastrzeżone. | <a href="/Privacy">Polityka prywatności</a>
    </footer>

</body>
</html>
