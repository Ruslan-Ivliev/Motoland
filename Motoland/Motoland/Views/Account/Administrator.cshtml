<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/css/Admin.css"> <!-- Link to the CSS file -->
    <script>
        // JavaScript function to handle user deletion
        function deleteUser(userId, row) {
            if (confirm("Are you sure you want to delete this user?")) {
                // Remove the user row from the table
                row.parentElement.removeChild(row);

                // Log the user ID to console or you can make an API call here
                console.log(`User with ID ${userId} has been deleted.`);

                // In a real app, you would make a request to your backend to delete the user
                // Example: fetch(`/api/deleteUser/${userId}`, { method: 'DELETE' });
            }
        }
    </script>
</head>
<body>
    <div class="wrapper">
        <div class="admin-container">
            <h1>Admin Dashboard</h1>

            <!-- Admin Panels Section -->
            <div class="admin-panel">
                <div class="panel-item">
                    <h3>User Management</h3>
                    <p>Manage users, edit their profiles, assign roles, and more.</p>
                </div>
                <div class="panel-item">
                    <h3>Reports</h3>
                    <p>View and manage user reports, system logs, and analytics.</p>
                </div>
                <div class="panel-item">
                    <h3>Settings</h3>
                    <p>Configure system settings, manage security, and other configurations.</p>
                </div>
            </div>

            <!-- Data Table Section -->
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th> <!-- New column for the delete button -->
                        </tr>
                    </thead>
                    <tbody>
                        <tr id="user-1">
                            <td>1</td>
                            <td>john_doe</td>
                            <td>john@example.com</td>
                            <td>Admin</td>
                            <td>Active</td>
                            <td><button onclick="deleteUser(1, this.parentNode.parentNode)">Delete</button></td>
                        </tr>
                        <tr id="user-2">
                            <td>2</td>
                            <td>jane_smith</td>
                            <td>jane@example.com</td>
                            <td>User</td>
                            <td>Inactive</td>
                            <td><button onclick="deleteUser(2, this.parentNode.parentNode)">Delete</button></td>
                        </tr>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>

            <!-- Action Button -->
            <a href="Register"class="btn">Add New User</a> 
        </div>
    </div>
</body>
</html>
